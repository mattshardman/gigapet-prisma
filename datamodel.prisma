type Pet {
  id: ID! @id @unique
  species: String!
  description: String!
  happy: String! @unique
  ok: String!
  sad: String!
  sick: String!
  eating: String!
}

type Parent {
  id: ID! @id @unique
  name: String!
  email: String!
  username: String! @unique
  password: String!
  pin: String!
  img_url: String!
  children: [Child]
}

type Child {
  id: ID! @id @unique
  name: String!
  pet_id: Pet
  pet_name: String!
  pet_experience: Int!
  parent: Parent
  foodEntries: [FoodEntry]
}

type FoodEntry {
  id: ID! @id @unique
  name: String!
  meal: String!
  category: String!
  date_added: String!
  date_updated: String!
  child: Child 
}